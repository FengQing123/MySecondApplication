<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_licenseKeyBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="自定义车牌号键盘" />

            <Button
                android:id="@+id/btn_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="editText测试" />

            <Button
                android:id="@+id/btn_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="fragment测试" />

            <Button
                android:id="@+id/btn_alarmManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="AlarmManager测试" />

            <Button
                android:id="@+id/btn_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="跑马灯测试" />

            <Button
                android:id="@+id/btn_videoPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="播放器测试" />

            <Button
                android:id="@+id/btn_viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="viewPager测试" />

            <Button
                android:id="@+id/btn_itemDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="listviewItem侧滑删除" />

            <Button
                android:id="@+id/btn_defined_marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="自定义跑马灯" />

            <Button
                android:id="@+id/btn_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="webview的使用" />

            <Button
                android:id="@+id/btn_ndk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="NDK的使用" />

            <Button
                android:id="@+id/btn_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="下载" />

            <Button
                android:id="@+id/btn_MVP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="学习使用MVP" />

            <Button
                android:id="@+id/btn_leak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="内存泄漏学习" />

            <Button
                android:id="@+id/btn_baidulocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="百度定位" />

            <Button
                android:id="@+id/btn_roundDial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="信用转盘" />

            <Button
                android:id="@+id/btn_calenderListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="calenderListView" />

            <Button
                android:id="@+id/btn_PLVideoTextureView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="PLVideoTextureView视频播放" />

            <Button
                android:id="@+id/btn_picCarousel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="图片轮播" />

            <Button
                android:id="@+id/btn_SQLite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="SQLite数据库" />

            <Button
                android:id="@+id/btn_dynamicallyAddLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="使用代码动态添加布局" />

            <Button
                android:id="@+id/btn_widgetTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="控件学习" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
